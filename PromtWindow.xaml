<Window x:Class="ChikagoBar.PromtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChikagoBar"
        mc:Ignorable="d" Title="Введите данные" Height="150" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="Images/chicago_pizza_icon.bmp" FontSize="14" FontFamily="Arial">
    <Grid>
        <TextBlock x:Name="TextBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="65" Width="274"/>
        <Button x:Name="btnNo" Content="Отменить" HorizontalAlignment="Left" Margin="209,92,0,0" VerticalAlignment="Top" Width="75" IsCancel="True"/>
        <Button x:Name="btnYes" Content="ОК" HorizontalAlignment="Left" Margin="129,92,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
